<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.alarm.AlarmSettingFragment">

    <ImageView
        android:id="@+id/back_to_notification"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/join_fragment_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

    <TextView
        android:id="@+id/join_text"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:text="알림 설정"
        style="@style/midText_black_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="18dp"/>

    <LinearLayout
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="15dp"
        android:background="#BFBFBF"
        android:elevation="1.5dp"
        app:layout_constraintTop_toBottomOf="@+id/join_text"
        android:orientation="horizontal"></LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/line">

        <TextView
            android:id="@+id/push_text"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="37dp"
            android:layout_marginLeft="16dp"
            android:text="푸시 알림"
            style="@style/midText_black_bold"/>
        <!--approval alarm-->
        <TextView
            android:id="@+id/approval_text"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/push_text"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="16dp"
            android:text="결재하기"
            style="@style/midText_black_light"/>


        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/approval_check_bock"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:button="@drawable/login_activity_check_box"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/push_text"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="20dp"></androidx.appcompat.widget.AppCompatCheckBox>

        <!--community alarm-->
        <TextView
            android:id="@+id/community_text"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/approval_text"
            android:layout_marginTop="28dp"
            android:layout_marginLeft="16dp"
            android:text="커뮤니티"
            style="@style/midText_black_light"/>


        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/community_check_box"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:button="@drawable/login_activity_check_box"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/approval_check_bock"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="20dp"></androidx.appcompat.widget.AppCompatCheckBox>


        <!--community alarm-->
        <TextView
            android:id="@+id/hot_text"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/community_text"
            android:layout_marginTop="28dp"
            android:layout_marginLeft="16dp"
            android:text="인기글"
            style="@style/midText_black_light"/>

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/hot_check_box"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:button="@drawable/login_activity_check_box"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/community_check_box"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="20dp"></androidx.appcompat.widget.AppCompatCheckBox>


        <!--community alarm-->
        <TextView
            android:id="@+id/info_text"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hot_text"
            android:layout_marginTop="28dp"
            android:layout_marginLeft="16dp"
            android:text="공지사항"
            style="@style/midText_black_light"/>

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/info_check_box"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:button="@drawable/login_activity_check_box"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hot_check_box"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="20dp"></androidx.appcompat.widget.AppCompatCheckBox>


        <!--community alarm-->
        <TextView
            android:id="@+id/follow"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/info_text"
            android:layout_marginTop="28dp"
            android:layout_marginLeft="16dp"
            android:text="팔로잉 및 팔로우"
            style="@style/midText_black_light"/>

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/follow_check_box"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:button="@drawable/login_activity_check_box"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/info_check_box"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="20dp"></androidx.appcompat.widget.AppCompatCheckBox>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/constraintLayout"
        android:layout_marginTop="50dp"
        android:layout_marginStart="16dp"
        android:text="좋아요 및 댓글"
        style="@style/midText_black_bold"
        />
    <ImageView
        android:id="@+id/move_to_like"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:src="@drawable/setting_icon_rightarrow"
        android:scaleType="center"
        app:layout_constraintTop_toBottomOf="@id/constraintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="16dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>