<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.community.CommunityUploadTalkFragment">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/upload_layout_footer">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/upload_layout_toolbar">

            <Spinner
                android:id="@+id/upload_department_spinner"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="16dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/upload_activity_department_spinner_custom"
                android:gravity="left"
                android:textColorHint="#141414"
                android:textColor="#141414"
                android:textSize="13sp"
                android:focusableInTouchMode="true"
                android:focusable="true"
                android:popupBackground="@drawable/upload_link_square_custom"
                android:spinnerMode="dropdown">
            </Spinner>

            <EditText
                android:id="@+id/upload_content_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:background="@android:color/transparent"
                android:gravity="top"
                android:hint="결재부탁 사원들과\n나누고 싶은 이야기를 작성해주세요!"
                android:overScrollMode="never"
                android:textColor="#141414"
                android:textColorHint="#8C8C8C"
                android:textSize="16sp"></EditText>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/vote_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/upload_round_button_custom"
        android:backgroundTint="#FAFAFA"
        android:elevation="1dp">
        <ImageButton
            android:id="@+id/vote_cancel_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@color/transparent"
            android:src="@drawable/vote_close_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/vote_layout"></ImageButton>

        <EditText
            android:id="@+id/vote_title_et"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="11dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginBottom="14dp"
            android:hint="투표 제목"
            android:textSize="13dp"
            android:background="@color/transparent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/vote_cancel_button"></EditText>
        <LinearLayout
            app:layout_constraintBottom_toBottomOf="@id/vote_title_et"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#BFBFBF"
            android:orientation="horizontal"></LinearLayout>

        <ImageButton
            android:id="@+id/vote_title_erase_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:layout_constraintEnd_toEndOf="@id/vote_title_et"
            app:layout_constraintTop_toTopOf="@id/vote_title_et"
            app:layout_constraintBottom_toBottomOf="@id/vote_title_et"
            android:background="@android:color/transparent"
            android:src="@drawable/upload_activity_img_cancel_button"></ImageButton>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/vote_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            app:layout_constraintTop_toBottomOf="@id/vote_title_et"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"></androidx.recyclerview.widget.RecyclerView>

        <LinearLayout
            android:id="@+id/vote_item_add_button"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/vote_item"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/upload_activity_round_dialog_custom"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:src="@drawable/community_fagment_upload_add_vote_button"
                android:layout_gravity="center">
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="항목 추가 ("
                android:textSize="13dp"
                android:fontFamily="@font/medium"
                android:textColor="@color/approval_black_color"
                android:layout_gravity="center"></TextView>

            <TextView
                android:id="@+id/vote_item_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="13dp"
                android:fontFamily="@font/medium"
                android:textColor="@color/approval_black_color"
                android:layout_gravity="center"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/4)"
                android:fontFamily="@font/medium"
                android:textSize="13dp"
                android:textColor="@color/approval_black_color"
                android:layout_gravity="center"></TextView>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/vote_line_button"
            app:layout_constraintTop_toBottomOf="@id/vote_item_add_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_width="match_parent"
            android:layout_marginTop="24dp"
            android:layout_height="1dp"
            android:background="#BFBFBF"
            android:orientation="horizontal"></LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/vote_multi_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/vote_line_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            >
            <ImageView
                android:id="@+id/image_multi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginRight="3dp"
                android:src="@drawable/community_upload_multi_image"
                android:backgroundTint="@color/transparent">
            </ImageView>

            <TextView
                app:layout_constraintStart_toEndOf="@id/image_multi"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="5.75dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="복수선택"
                android:textSize="11sp"
                android:textColor="@color/approval_black_color">
            </TextView>
            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/vote_setting_multi"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="left"
                android:button="@drawable/login_activity_check_box"></androidx.appcompat.widget.AppCompatCheckBox>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/vote_anonymous_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/vote_multi_layout"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingBottom="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            >
            <ImageView
                android:id="@+id/image_annoymous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="5.25dp"
                android:layout_marginRight="5.25dp"
                android:src="@drawable/community_upload_annoymous_image"
                android:backgroundTint="@color/transparent">
            </ImageView>

            <TextView
                app:layout_constraintStart_toEndOf="@id/image_annoymous"
                android:layout_marginLeft="11dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="익명투표"
                android:textSize="11sp"
                android:textColor="@color/approval_black_color">
            </TextView>

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/vote_setting_anonymous"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="left"
                android:button="@drawable/login_activity_check_box"></androidx.appcompat.widget.AppCompatCheckBox>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/upload_image_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toTopOf="@+id/open_graph">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/image_rv"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></androidx.recyclerview.widget.RecyclerView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/open_graph_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/upload_link_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></androidx.recyclerview.widget.RecyclerView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/upload_hashtag_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>
    </ScrollView>

<!--  하단바  -->
    <LinearLayout
        android:id="@+id/upload_layout_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="5"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:backgroundTint="@color/white"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/upload_vote_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1">
                <ImageButton
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/upload_activity_vote_button"
                    android:textSize="16sp"></ImageButton>
                <TextView
                    android:id="@+id/upload_vote_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(0/1)"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:textSize="11sp"
                    ></TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/upload_image_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1">
                <ImageButton
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="10dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/upload_activity_image_button"
                    android:textSize="16sp"></ImageButton>
                <TextView
                    android:id="@+id/image_vote_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(4/4)"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:textSize="11sp"
                    ></TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/upload_link_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <ImageButton
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/upload_activity_link_button"
                    android:textSize="16sp"></ImageButton>
                <TextView
                    android:id="@+id/image_link_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(0/4)"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:textSize="11sp"
                    ></TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/upload_tag_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <ImageButton
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/upload_activity_hashtag_button"
                    android:textSize="16sp"></ImageButton>
                <TextView
                    android:id="@+id/image_tag_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(0/4)"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:textSize="11sp"
                    ></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>