<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:layout_gravity="center_horizontal">
    <TextView
        android:id="@+id/record_item_date"
        android:layout_width="61dp"
        android:layout_height="wrap_content"
        android:text="xx. xx. xx"
        android:textSize="13sp"
        android:textColor="#141414"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/record_item_content"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:text="내용 텍스트 예시 ..."
        android:textSize="13sp"
        android:textColor="#141414"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/record_item_date"
        android:layout_marginLeft="24dp"/>
    <TextView
        android:id="@+id/record_item_point"
        android:layout_width="62dp"
        android:layout_height="wrap_content"
        android:text="+ xxxxx"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="#6C39FF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/record_item_content"
        android:layout_marginLeft="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>