<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="18dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal">
    <TextView
        android:id="@+id/record_item_date"
        android:layout_width="61dp"
        android:layout_height="wrap_content"
        android:text="xx. xx. xx"
        style="@style/midText_black_light"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="25dp"/>
    <TextView
        android:id="@+id/record_item_content"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:text="내용 텍스트 예시 ..."
        style="@style/midText_black_light"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/record_item_date"
        android:layout_marginLeft="24dp"/>
    <TextView
        android:id="@+id/record_item_point"
        android:layout_width="57dp"
        android:layout_height="wrap_content"
        android:text="+ xxxxxx"
        style="@style/midText_purple"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="21dp"
        android:layout_marginStart="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>