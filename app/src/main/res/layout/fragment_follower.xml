<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.mypage.follow.FollowerFragment"
    android:background="#FAFAFA">
    <ImageView
        android:id="@+id/follower_searchbar_background"
        android:layout_width="match_parent"
        android:layout_height="31dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/follow_searchbar_background"
        android:scaleType="fitXY"/>
    <EditText
        android:id="@+id/follower_searchbar"
        android:layout_width="match_parent"
        android:layout_height="21dp"
        android:textSize="16sp"
        android:textColor="#BFBFBF"
        android:fontFamily="@font/medium"
        app:layout_constraintTop_toTopOf="@id/follower_searchbar_background"
        app:layout_constraintBottom_toBottomOf="@id/follower_searchbar_background"
        app:layout_constraintStart_toStartOf="@id/follower_searchbar_background"
        app:layout_constraintEnd_toEndOf="@id/follower_searchbar_background"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="27dp"
        android:background="#FFFFFF"
        android:hint="검색어를 입력해 주세요"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/follower_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:listitem="@layout/follow_recyclerview_item"
        app:layout_constraintTop_toTopOf="@id/follower_searchbar_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>