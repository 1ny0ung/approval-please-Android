<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--talk-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/community_approval_talk_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/talk_profile"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/face_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/talk_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="김차장"
            android:textColor="#141414"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/talk_profile"
            app:layout_constraintTop_toTopOf="@+id/talk_profile" />

        <ImageView
            android:id="@+id/talk_level"
            android:layout_width="20dp"
            android:layout_height="10dp"
            android:src="@drawable/mypage_rank_chajang"
            app:layout_constraintStart_toEndOf="@+id/talk_name"
            app:layout_constraintTop_toTopOf="@+id/talk_name" />

        <TextView
            android:id="@+id/talk_time"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_marginLeft="5dp"
            android:text="디지털 기기 : 30분 전"
            android:textColor="#8C8C8C"
            android:textSize="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/talk_profile"
            app:layout_constraintStart_toEndOf="@+id/talk_profile" />


        <ImageView
            android:id="@+id/talk_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/community_fragment_follow"
            app:layout_constraintEnd_toStartOf="@+id/talk_etc"
            app:layout_constraintTop_toTopOf="@+id/talk_level" />

        <ImageView
            android:id="@+id/talk_etc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/community_fragment_etc"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/talk_level" />

        <TextView
            android:id="@+id/talk_category_item_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="댓글 텍스트 예시 comment text example\nabcdefghijklmnopqrstuvwxyz0123456"
            android:textColor="#141414"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/talk_profile" />

        <LinearLayout
            android:id="@+id/talk_linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/approval_line_color"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/talk_category_item_text"></LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/talk_vote_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/talk_linearLayout2">

            <ImageView
                android:id="@+id/talk_community_vote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/community_fragment_vote"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"></ImageView>

            <TextView
                android:id="@+id/talk_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="텀블러"
                android:textColor="@color/approval_main_color"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="@+id/talk_community_vote"
                app:layout_constraintStart_toEndOf="@+id/talk_community_vote"
                app:layout_constraintTop_toTopOf="@+id/talk_community_vote"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="투표진행중"
                android:textColor="@color/approval_black_color"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="@+id/talk_community_vote"
                app:layout_constraintStart_toEndOf="@+id/talk_textView"
                app:layout_constraintTop_toTopOf="@+id/talk_community_vote"></TextView>

            <LinearLayout
                android:id="@+id/talk_linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/approval_line_color"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"></LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/talk_imageLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/talk_vote_layout">

            <ImageView
                android:id="@+id/talk_image"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_marginTop="15dp"
                android:scaleType="centerCrop"
                android:src="@drawable/community_fragment_test_image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"></ImageView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/talk_linkLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/talk_imageLayout">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/talk_open_graph_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_activity_white_box"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/talk_open_graph_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/community_fragment_test_image"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"></ImageView>

                <TextView
                    android:id="@+id/talk_open_graph_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="정보 입니다"
                    android:textColor="@color/approval_black_color"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/talk_open_graph_image"
                    app:layout_constraintTop_toTopOf="@+id/talk_open_graph_image"></TextView>

                <TextView
                    android:id="@+id/talk_open_graph_url"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="url입니다"
                    android:textColor="@color/approval_main_color"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/talk_open_graph_image"
                    app:layout_constraintTop_toBottomOf="@+id/talk_open_graph_text"></TextView>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/talk_viewLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/talk_linkLayout">

            <TextView
                android:id="@+id/talk_like_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="좋아요 2"
                android:textColor="@color/approval_text_color"
                android:textSize="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"></TextView>

            <TextView
                android:id="@+id/talk_scrap_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="스크랩 5"
                android:textColor="@color/approval_text_color"
                android:textSize="12dp"
                app:layout_constraintStart_toEndOf="@+id/talk_like_text"
                app:layout_constraintTop_toTopOf="@id/talk_like_text"></TextView>

            <TextView
                android:id="@+id/talk_view_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:text="스크랩 5"
                android:textColor="@color/approval_text_color"
                android:textSize="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/talk_like_text"></TextView>

            <ImageView
                android:id="@+id/talk_like_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/community_fragment_like"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/talk_line_1"></ImageView>

            <TextView
                android:id="@+id/talk_like_button_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="좋아요"
                android:textColor="@color/approval_text_color"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="@+id/talk_line_1"
                app:layout_constraintStart_toEndOf="@+id/talk_like_image"
                app:layout_constraintTop_toTopOf="@+id/talk_line_1"></TextView>

            <ImageView
                android:id="@+id/talk_line_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/community_fragment_line"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/talk_scrap_text"></ImageView>


            <ImageView
                android:id="@+id/talk_line_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="100dp"
                android:src="@drawable/community_fragment_line"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/talk_line_1"></ImageView>


            <ImageView
                android:id="@+id/talk_share_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:src="@drawable/community_fragment_share"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/talk_line_1"></ImageView>

            <TextView
                android:id="@+id/talk_share_button_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="공유"
                android:textColor="@color/approval_text_color"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="@+id/talk_line_1"
                app:layout_constraintStart_toEndOf="@+id/talk_share_image"
                app:layout_constraintTop_toTopOf="@+id/talk_line_1"></TextView>

            <ImageView
                android:id="@+id/talk_reply_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:src="@drawable/community_fragment_repl"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/talk_line_1"
                app:layout_constraintTop_toTopOf="@+id/talk_line_1"></ImageView>

            <TextView
                android:id="@+id/talk_reply_button_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="댓글 12"
                android:textColor="@color/approval_text_color"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="@+id/talk_line_1"
                app:layout_constraintStart_toEndOf="@+id/talk_reply_image"
                app:layout_constraintTop_toTopOf="@+id/talk_line_1"></TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/talk_empty_space"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@+id/talk_viewLayout"></androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>