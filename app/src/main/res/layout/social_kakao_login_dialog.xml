<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:src="@drawable/login_fragment_kakao_click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ImageView>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BFBFBF">
    </LinearLayout>

    <LinearLayout
        android:weightSum="4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_gravity="center"
            android:src="@drawable/join_fragment_dialog_back"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ImageView>

        <ImageView
            android:layout_weight="2"
            android:src="@drawable/join_fragment_dialog_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ImageView>

        <ImageView
            android:id="@+id/back_fragment"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"
            android:src="@drawable/login_fragment_social_login_dialog_open"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ImageView>

    </LinearLayout>


</LinearLayout>