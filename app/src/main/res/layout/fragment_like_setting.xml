<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.alarm.LikeSettingFragment">

    <ImageView
    android:id="@+id/back_to_alarm_fragment"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="12dp"
    android:layout_width="25dp"
    android:layout_height="25dp"
    android:src="@drawable/join_fragment_back"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"></ImageView>

    <TextView
        android:id="@+id/join_text"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="18dp"
        android:text="좋아요 및 댓글"
        style="@style/midText_black_bold"/>

    <LinearLayout
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:elevation="1.5dp"
        android:layout_marginTop="15dp"
        android:background="#BFBFBF"
        app:layout_constraintTop_toBottomOf="@+id/join_text"
        android:orientation="horizontal"></LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/line">

        <TextView
            android:id="@+id/like_text"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="37dp"
            android:text="좋아요"
            style="@style/midText_black_bold"/>


        <!--approval alarm-->
        <TextView
            android:id="@+id/like_cancel_text"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/like_text"
            android:layout_marginStart="16dp"
            android:layout_marginTop="17dp"
            android:text="해제"
            style="@style/midText_black_light"/>

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/like_cancel_check_bock"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:button="@drawable/login_activity_check_box"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/like_text"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="16dp"></androidx.appcompat.widget.AppCompatCheckBox>

        <!--community alarm-->
        <TextView
            android:id="@+id/like_follower_text"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/like_cancel_text"
            android:layout_marginStart="16dp"
            android:layout_marginTop="21dp"
            android:text="내가 팔로우하는 사람"
            style="@style/midText_black_light"/>

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/like_follower_check_box"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:button="@drawable/login_activity_check_box"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/like_cancel_check_bock"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="16dp"></androidx.appcompat.widget.AppCompatCheckBox>


        <!--community alarm-->
        <TextView
            android:id="@+id/like_all_text"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/like_follower_text"
            android:layout_marginStart="16dp"
            android:layout_marginTop="21dp"
            android:text="모든 사람"
            style="@style/midText_black_light"/>

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/like_hot_check_box"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:button="@drawable/login_activity_check_box"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/like_follower_check_box"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="16dp"></androidx.appcompat.widget.AppCompatCheckBox>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

        <TextView
            android:id="@+id/reply_text"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="89dp"
            android:text="댓글"
            style="@style/midText_black_bold"/>


        <!--approval alarm-->
        <TextView
            android:id="@+id/reply_cancel_text"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/reply_text"
            android:layout_marginStart="16dp"
            android:layout_marginTop="17dp"
            android:text="해제"
            style="@style/midText_black_light"/>


        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/reply_cancel_check_bock"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:button="@drawable/login_activity_check_box"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reply_text"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="16dp"></androidx.appcompat.widget.AppCompatCheckBox>

        <!--community alarm-->
        <TextView
            android:id="@+id/reply_follower_text"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/reply_cancel_text"
            android:layout_marginStart="16dp"
            android:layout_marginTop="21dp"
            android:text="내가 팔로우하는 사람"
            style="@style/midText_black_light"/>

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/reply_follower_check_box"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:button="@drawable/login_activity_check_box"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reply_cancel_check_bock"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="16dp"></androidx.appcompat.widget.AppCompatCheckBox>


        <!--community alarm-->
        <TextView
            android:id="@+id/reply_all_text"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/reply_follower_text"
            android:layout_marginStart="16dp"
            android:layout_marginTop="21dp"
            android:text="모든 사람"
            style="@style/midText_black_light"/>

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/reply_hot_check_box"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:button="@drawable/login_activity_check_box"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reply_follower_check_box"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="16dp"></androidx.appcompat.widget.AppCompatCheckBox>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>