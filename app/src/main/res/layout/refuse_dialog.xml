<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_approve_dialog"
    android:paddingBottom="18dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.document.RefuseDialog">
        <ImageView
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/document_refusal_icon_selected"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="25dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="반려하기"
            android:textSize="20sp"
            android:textColor="#141414"
            android:fontFamily="@font/bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="73dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="한번 결재하면\n되돌릴 수 없습니다\n해당 결재 서류를 반려할까요?"
            android:textSize="12sp"
            android:textColor="#8C8C8C"
            android:fontFamily="@font/medium"
            android:gravity="center"
            android:lineSpacingExtra="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="116dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/no_button"
            android:layout_width="55dp"
            android:layout_height="26dp"
            android:background="@drawable/shape_document_approve_button"
            android:backgroundTint="#FFFFFF"
            android:text="취소"
            android:textAppearance="@style/smallText_darkgray_bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="204dp"
            android:layout_marginStart="27dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/yes_button"
            android:layout_width="55dp"
            android:layout_height="26dp"
            android:background="@drawable/shape_document_approve_button"
            android:backgroundTint="#FF669D"
            android:text="확인"
            android:textAppearance="@style/smallText_darkgray_bold"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="204dp"
            android:layout_marginEnd="27dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>