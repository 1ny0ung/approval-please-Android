<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FAFAFA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:overScrollMode="never"
            android:scrollbars="none"
            android:paddingVertical="15dp">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/cg_all_category"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                app:selectionRequired="true"
                app:singleLine="true"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    style="@style/Colors_Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:checked="true"
                    android:text="@string/all_category"
                    android:textSize="11sp"
                    app:chipCornerRadius="15dp"
                    app:chipEndPadding="2dp"
                    app:chipMinTouchTargetSize="0dp"
                    app:chipStartPadding="0dp"/>

                <com.google.android.material.chip.Chip
                    style="@style/Colors_Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:text="디지털 기기"
                    android:textSize="11sp"
                    app:chipCornerRadius="15dp"
                    app:chipEndPadding="2dp"
                    app:chipMinTouchTargetSize="0dp"
                    app:chipStartPadding="0dp" />

                <com.google.android.material.chip.Chip
                    style="@style/Colors_Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:text="생활가전"
                    android:textSize="11sp"
                    app:chipCornerRadius="15dp"
                    app:chipEndPadding="2dp"
                    app:chipMinTouchTargetSize="0dp"
                    app:chipStartPadding="0dp" />

                <com.google.android.material.chip.Chip
                    style="@style/Colors_Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:text="생활용품"
                    android:textSize="11sp"
                    app:chipCornerRadius="15dp"
                    app:chipEndPadding="2dp"
                    app:chipMinTouchTargetSize="0dp"
                    app:chipStartPadding="0dp" />

                <com.google.android.material.chip.Chip
                    style="@style/Colors_Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:text="가구/인테리어"
                    android:textSize="11sp"
                    app:chipCornerRadius="15dp"
                    app:chipEndPadding="2dp"
                    app:chipMinTouchTargetSize="0dp"
                    app:chipStartPadding="0dp" />


                <View
                    android:layout_width="20dp"
                    android:layout_height="match_parent" />

            </com.google.android.material.chip.ChipGroup>
        </HorizontalScrollView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_approval_paper"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>
</FrameLayout>