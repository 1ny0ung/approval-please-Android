<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="330dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/community_dialog"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:padding="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="16sp"
        android:text="이 사용자를 신고하시겠습니까?"
        android:fontFamily="@font/medium"
        android:textColor="@color/approval_black_color"
        />

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="1dp"
        android:background="#BFBFBF">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/upload_link_dialog_button"
        android:layout_width="330dp"
        android:layout_height="37dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/community_dialog_cancel_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:fontFamily="@font/bold"
            android:text="취소"
            android:textSize="11sp"
            android:textColor="#8C8C8C"/>

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:elevation="1dp"
            android:background="#BFBFBF">
        </LinearLayout>

        <Button
            android:id="@+id/community_dialog_confirm_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="사용자 신고하기"
            android:textSize="11sp"
            android:fontFamily="@font/bold"
            android:textStyle="bold"
            android:textColor="#FF0000"/>

    </LinearLayout>

</LinearLayout>
