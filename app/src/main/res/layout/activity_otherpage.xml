<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".check.collie.OtherpageActivity">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="1">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/otherpage_profile_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/mypage_background"
                android:elevation="2dp"
                android:paddingBottom="4dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="18dp"
                    android:paddingBottom="18dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="#FFFFFF">
                    <TextView
                        android:id="@+id/textView"
                        style="@style/TopTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="사원증"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageButton
                        android:id="@+id/otherpage_setting"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="16dp"
                        android:background="#FFFFFF"
                        android:scaleType="fitXY"
                        android:src="@drawable/otherpage_setting_icon2"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageButton
                        android:id="@+id/otherpage_share"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="26dp"
                        android:background="#FFFFFF"
                        android:src="@drawable/mypage_icon_share"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/otherpage_setting"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <FrameLayout
                    android:layout_width="145dp"
                    android:layout_height="145dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="61dp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/otherpage_profile_pic"
                        android:layout_gravity="center"
                        android:layout_width="145dp"
                        android:layout_height="145dp"
                        android:src="@drawable/profile_img_chajang"
                        app:civ_border_width="0.9dp"
                        app:civ_border_color="#D9D9D9"/>
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:gravity="center_vertical"
                    android:textSize="13sp"
                    android:text="현재 직급"
                    android:textColor="#8C8C8C"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="228dp"
                    android:layout_marginLeft="137.5dp"
                    android:layout_marginRight="173.5dp"/>

                <TextView
                    android:id="@+id/otherpage_rank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/home_fragment_post_rank_background"
                    android:text="부장"
                    style="@style/midText_black_light"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="228dp"
                    android:layout_marginStart="191.5dp"
                    android:layout_marginEnd="136.5dp"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"/>

                <LinearLayout
                    android:id="@+id/otherpage_nickname_area"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/otherpage_rank"
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="99dp"
                    android:layout_marginEnd="99dp"
                    android:gravity="center">
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:id="@+id/otherpage_nickname_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nickname"
                        android:gravity="top"
                        style="@style/biggestText_black_bold"
                        android:layout_marginRight="5dp"/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/follow_btn"
                        android:layout_gravity="bottom"
                        android:layout_width="45dp"
                        android:layout_height="24dp"
                        android:background="@drawable/shape_document_approve_button"
                        android:backgroundTint="#6C39FF"
                        android:text="팔로우"
                        android:textColor="#FFFFFF"
                        android:textSize="11sp"
                        android:fontFamily="@font/light"
                        android:includeFontPadding="false"
                        android:padding="0dp"
                        android:layout_marginLeft="5dp"/>

                </LinearLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/otherpage_follow_area"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_marginTop="9dp"
                    app:layout_constraintTop_toBottomOf="@id/otherpage_nickname_area"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <TextView
                        android:id="@+id/otherpage_follower_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="팔로워 100"
                        style="@style/midText_black_light"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/otherpage_following_textview"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                    <TextView
                        android:id="@+id/otherpage_following_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text= "팔로잉 100"
                        style="@style/midText_black_light"
                        app:layout_constraintStart_toEndOf="@id/otherpage_follower_textview"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginStart="7.5dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView
                    android:id="@+id/profile_msg_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="프로필 메세지 샘플입니다."
                    style="@style/midText_black_light"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/otherpage_follow_area"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="승진 포인트"
                    style="@style/midText_black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="343dp"
                    android:layout_marginStart="42dp"/>
                <TextView
                    android:id="@+id/point_num1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="000"
                    style="@style/smallText_black"
                    app:layout_constraintEnd_toStartOf="@id/point_num2"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="345dp"/>
                <TextView
                    android:id="@+id/point_num2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" / 00000"
                    style="@style/smallText_darkgray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="345dp"
                    android:layout_marginEnd="42dp"/>
                <SeekBar
                    android:id="@+id/otherpage_progressbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxHeight="8dp"
                    android:layout_marginTop="369dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:layout_marginStart="34dp"
                    android:layout_marginEnd="34dp"
                    android:clickable="false"
                    android:max="100"
                    android:min="0"
                    android:progressDrawable="@drawable/mypage_progressbar_style"
                    android:thumb="@drawable/mypage_point_icon_fill"
                    android:thumbOffset="1.5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:splitTrack="false" />

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/otherpage_tabLayout"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    app:tabSelectedTextColor="#6C39FF"
                    app:tabTextColor="#BFBFBF"
                    app:tabTextAppearance="@style/midText_gray"
                    app:tabIndicatorHeight="1.2dp"
                    app:tabIndicatorFullWidth="false"
                    app:layout_constraintTop_toTopOf="@id/otherpage_progressbar"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="28dp">
                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="결재서류"/>
                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="커뮤니티"/>
                </com.google.android.material.tabs.TabLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <FrameLayout
                android:id="@+id/otherpage_tabArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/otherpage_profile_area"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>