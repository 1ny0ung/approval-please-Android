<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="36dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="12.5dp"
    android:layout_marginBottom="12.5dp">
    <ImageView
        android:id="@+id/follow_item_profilepic"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/follow_profileimage"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/follow_item_rank"
        style="@style/smallText_black_light"
        android:layout_width="28dp"
        android:layout_height="14dp"
        android:layout_gravity="center"
        android:background="@drawable/home_fragment_post_rank_background"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:text="부장"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/follow_item_profilepic"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/follow_item_name"
        style="@style/midText_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="김부장"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/follow_item_rank"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>