<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.DocumentCommentActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/document_comment_topbar"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:background="@drawable/document_comment_topbar_background"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="-12dp">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/document_comment_icon_leftarrow"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="27dp"
            android:layout_marginStart="16dp"
            android:scaleType="fitCenter"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:text="영화·공연 서류"
            android:textColor="#141414"
            android:textStyle="bold"
            android:textSize="13sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/document_comment_icon_heart"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="81dp"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/document_comment_icon_share"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="49dp"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/document_comment_icon_menu"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="17dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/document_comment_topbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/document_comment_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/document_comment_topbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/row1_area"
            android:layout_width="44dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/document_comment_post_background">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/row1_name"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="성명"
                    android:textSize="11dp"
                    android:textAlignment="center"
                    android:textColor="#141414"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="32dp"
                    android:layout_height="1dp"
                    android:src="@drawable/document_comment_post_line"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/row1_product"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                app:layout_constraintTop_toBottomOf="@id/row1_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="건명"
                    android:textSize="11dp"
                    android:textAlignment="center"
                    android:textColor="#141414"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="32dp"
                    android:layout_height="1dp"
                    android:src="@drawable/document_comment_post_line"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/row1_content"
                android:layout_width="match_parent"
                android:layout_height="182dp"
                app:layout_constraintTop_toBottomOf="@id/row1_product"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="내용"
                    android:textSize="11dp"
                    android:textAlignment="center"
                    android:textColor="#141414"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="32dp"
                    android:layout_height="1dp"
                    android:src="@drawable/document_comment_post_line"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/row1_pic"
                android:layout_width="match_parent"
                android:layout_height="178dp"
                app:layout_constraintTop_toBottomOf="@id/row1_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="참고\n사진"
                    android:textSize="11dp"
                    android:textAlignment="center"
                    android:textColor="#141414"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="32dp"
                    android:layout_height="1dp"
                    android:src="@drawable/document_comment_post_line"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/row1_link"
                android:layout_width="match_parent"
                android:layout_height="71dp"
                app:layout_constraintTop_toBottomOf="@id/row1_pic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="참조"
                    android:textSize="11dp"
                    android:textAlignment="center"
                    android:textColor="#141414"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="32dp"
                    android:layout_height="1dp"
                    android:src="@drawable/document_comment_post_line"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/row1_result"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                app:layout_constraintTop_toBottomOf="@id/row1_link"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="결재"
                    android:textSize="11dp"
                    android:textAlignment="center"
                    android:textColor="#141414"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/row2_area"
            android:layout_width="284dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/row1_area">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/row2_name"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingStart="14dp"
                android:paddingEnd="14dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="성명"
                    android:textAlignment="center"
                    android:textColor="#141414"
                    android:textSize="11dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/row2_product"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                app:layout_constraintTop_toBottomOf="@id/row2_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingStart="14dp"
                android:paddingEnd="14dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="건명"
                    android:textSize="11dp"
                    android:textAlignment="center"
                    android:textColor="#141414"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/row2_content"
                android:layout_width="match_parent"
                android:layout_height="182dp"
                app:layout_constraintTop_toBottomOf="@id/row2_product"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingStart="14dp"
                android:paddingEnd="14dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="내용"
                    android:textSize="11dp"
                    android:textAlignment="center"
                    android:textColor="#141414"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/row2_pic"
                android:layout_width="match_parent"
                android:layout_height="178dp"
                app:layout_constraintTop_toBottomOf="@id/row2_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingStart="14dp"
                android:paddingEnd="14dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="참고\n사진"
                    android:textSize="11dp"
                    android:textAlignment="center"
                    android:textColor="#141414"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/row2_link"
                android:layout_width="match_parent"
                android:layout_height="71dp"
                app:layout_constraintTop_toBottomOf="@id/row2_pic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingStart="14dp"
                android:paddingEnd="14dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="참조"
                    android:textSize="11dp"
                    android:textAlignment="center"
                    android:textColor="#141414"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/row2_result"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                app:layout_constraintTop_toBottomOf="@id/row2_link"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingStart="14dp"
                android:paddingEnd="14dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="결재"
                    android:textSize="11dp"
                    android:textAlignment="center"
                    android:textColor="#141414"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/document_comment_postinfo"
        android:layout_width="328dp"
        android:layout_height="13dp"
        app:layout_constraintTop_toBottomOf="@id/document_comment_post"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="13dp">
        <TextView
            android:id="@+id/document_comment_post_likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="좋아요 2"
            android:textSize="11sp"
            android:textColor="#D9D9D9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/document_comment_post_between"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="·"
            android:textSize="11sp"
            android:textColor="#D9D9D9"
            app:layout_constraintStart_toEndOf="@id/document_comment_post_likes"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="4dp"/>
        <TextView
            android:id="@+id/document_comment_post_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="댓글 3"
            android:textSize="11sp"
            android:textColor="#D9D9D9"
            app:layout_constraintStart_toEndOf="@id/document_comment_post_between"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="4dp"/>

        <TextView
            android:id="@+id/document_comment_post_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 시간 전"
            android:textSize="11sp"
            android:textColor="#D9D9D9"
            app:layout_constraintEnd_toStartOf="@id/document_comment_post_between2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="4dp"/>
        <TextView
            android:id="@+id/document_comment_post_between2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="·"
            android:textSize="11sp"
            android:textColor="#D9D9D9"
            app:layout_constraintEnd_toStartOf="@id/document_comment_post_views"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="4dp"/>
        <TextView
            android:id="@+id/document_comment_post_views"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="조회수 34"
            android:textSize="11sp"
            android:textColor="#D9D9D9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="4dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:listitem="@layout/document_comment_recyclerview_item"
        app:layout_constraintTop_toBottomOf="@id/document_comment_postinfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:nestedScrollingEnabled="false"
        android:layout_marginTop="13dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent">
        <ImageButton
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/document_comment_icon_pic"
            android:scaleType="fitCenter"
            android:background="#FFFFFF"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
        <ImageView
            android:id="@+id/document_comment_comment_area"
            android:layout_width="342dp"
            android:layout_height="38dp"
            android:src="@drawable/document_comment_comment_background"
            android:scaleType="fitXY"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"/>
        <EditText
            android:gravity="center_vertical"
            android:layout_width="326dp"
            android:layout_height="wrap_content"
            android:background="#FAFAFA"
            android:hint="댓글을 입력하세요"
            android:textSize="15sp"
            android:textColor="#8C8C8C"
            app:layout_constraintTop_toTopOf="@id/document_comment_comment_area"
            app:layout_constraintBottom_toBottomOf="@id/document_comment_comment_area"
            app:layout_constraintStart_toStartOf="@id/document_comment_comment_area"
            app:layout_constraintEnd_toEndOf="@id/document_comment_comment_area"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>