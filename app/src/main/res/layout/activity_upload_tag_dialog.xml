<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <EditText
        android:id="@+id/upload_tag_dialog_et"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"
        android:background="@drawable/upload_activity_round_dialog_custom"
        android:hint=" #최대 00자까지 입력"
        android:bufferType="spannable"
        android:inputType="text"
        android:textSize="16sp"/>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/upload_tag_dialog_cancel_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@android:color/white"
            android:text="취소"
            android:textStyle="bold"
            android:textColor="#8C8C8C"/>

        <Button
            android:id="@+id/upload_tag_dialog_confirm_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@android:color/white"
            android:text="확인"
            android:textStyle="bold"
            android:textColor="#6C39FF"/>
    </LinearLayout>

</LinearLayout>
