<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.mypage.MypageFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mypage_profile_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/mypage_background"
        android:elevation="2dp"
        android:paddingBottom="4dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내 사원증"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"/>
        <ImageButton
            android:id="@+id/mypage_setting"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/mypage_icon_settings"
            android:background="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="24dp"/>
        <ImageButton
            android:id="@+id/mypage_share"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/mypage_icon_share"
            android:background="#FFFFFF"
            app:layout_constraintEnd_toStartOf="@id/mypage_setting"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="26dp"
            android:layout_marginTop="24dp"/>

        <FrameLayout
            android:layout_width="145dp"
            android:layout_height="145dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="61dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_gravity="center"
                android:layout_width="145dp"
                android:layout_height="145dp"
                android:src="@drawable/face_1"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_fix"
                android:layout_gravity="bottom"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:scaleX="1.05"
                android:scaleY="1.05"
                android:src="@drawable/mypage_icon_pen"
                android:layout_marginLeft="102.5dp"/>
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:gravity="center_vertical"
            android:textSize="13sp"
            android:text="현재 직급"
            android:textColor="#8C8C8C"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="228dp"
            android:layout_marginLeft="137.5dp"
            android:layout_marginRight="173.5dp"/>
        <ImageView
            android:id="@+id/rank_imageview"
            android:layout_width="33dp"
            android:layout_height="18dp"
            android:src="@drawable/mypage_rank_chajang"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="228dp"
            android:layout_marginLeft="191.5dp"
            android:layout_marginRight="136.5dp"/>
        <TextView
            android:id="@+id/nickname_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="23sp"
            android:text="nickname"
            android:textStyle="bold"
            android:textColor="#141414"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rank_imageview"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/follower_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:text= "팔로워"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/follower_num_textview"
            app:layout_constraintTop_toBottomOf="@id/nickname_textview"
            android:layout_marginTop="10dp"
            android:layout_marginStart="120dp"/>
        <TextView
            android:id="@+id/follower_num_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:text="100"
            android:textColor="#000000"
            app:layout_constraintStart_toEndOf="@id/follower_textview"
            app:layout_constraintEnd_toStartOf="@id/following_textview"
            app:layout_constraintTop_toBottomOf="@id/nickname_textview"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="7.5dp"/>
        <TextView
            android:id="@+id/following_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:text= "팔로잉"
            android:textColor="#000000"
            app:layout_constraintStart_toEndOf="@id/follower_num_textview"
            app:layout_constraintEnd_toStartOf="@id/following_num_textview"
            app:layout_constraintTop_toBottomOf="@id/nickname_textview"
            android:layout_marginTop="10dp"
            android:layout_marginStart="7.5dp"/>
        <TextView
            android:id="@+id/following_num_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:text="100"
            android:textColor="#000000"
            app:layout_constraintStart_toEndOf="@id/following_textview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/nickname_textview"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="120dp"/>
        <TextView
            android:id="@+id/profile_msg_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="프로필 메세지 샘플입니다."
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/follower_textview"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="승진 포인트"
            android:textColor="#141414"
            app:layout_constraintStart_toStartOf="@id/mypage_progressbar"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="343dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:text="000 / 00000"
            android:textColor="#141414"
            app:layout_constraintEnd_toEndOf="@id/mypage_progressbar"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="345dp"/>
        <ProgressBar
            android:id="@+id/mypage_progressbar"
            android:layout_width="276dp"
            android:layout_height="8dp"
            android:max="100"
            android:progress="50"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:progressDrawable="@drawable/mypage_progressbar_style"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="369dp"/>
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/mypage_tabLayout"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            app:tabSelectedTextColor="#6C39FF"
            app:tabTextColor="#BFBFBF"
            app:tabIndicatorHeight="1.2dp"
            app:tabIndicatorFullWidth="false"
            app:layout_constraintTop_toTopOf="@id/mypage_progressbar"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="28dp">
            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="결재서류"/>
            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="커뮤니티"/>
            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="댓글"/>
            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="스크랩"/>
            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="실적"/>
        </com.google.android.material.tabs.TabLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <FrameLayout
        android:id="@+id/mypage_tabArea"
        android:layout_width="match_parent"
        android:layout_height="370dp"
        app:layout_constraintTop_toBottomOf="@id/mypage_profile_area"/>
</androidx.constraintlayout.widget.ConstraintLayout>