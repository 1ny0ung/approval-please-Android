<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Approval" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!--타이틀 제거-->
        <item name="windowNoTitle">true</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- approval fragment tab custom -->
    <style name="tabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- home fragment chip custom -->
    <style name="Colors_Widget.MaterialComponents.Chip.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@drawable/approval_fragment_choice_chip_background_color</item>
        <item name="android:textColor">@drawable/approval_fragment_choice_chip_text_color</item>
        <item name="chipCornerRadius">15dp</item>
        <item name="chipEndPadding">2dp</item>
        <item name="chipMinTouchTargetSize">0dp</item>
        <item name="chipStartPadding">0dp</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textAppearance">@style/chipText</item>
    </style>

    <style name="chipText">
        <item name="fontFamily">@font/medium</item>
    </style>

    <!-- bottom sheet dialog custom -->
    <style name="RoundCornerBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/RoundCornerModalStyle</item>
    </style>

    <style name="RoundCornerModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/approval_fragment_bottom_sheet_dialog_background</item>
    </style>

    <!-- approval paper tag chip custom -->
    <style name="customTag" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@drawable/approval_fragment_choice_chip_background_color</item>
        <item name="android:textColor">@drawable/approval_fragment_choice_chip_text_color</item>
        <item name="chipCornerRadius">15dp</item>
        <item name="chipEndPadding">2dp</item>
        <item name="chipMinTouchTargetSize">0dp</item>
        <item name="chipStartPadding">0dp</item>
        <item name="android:textSize">11sp</item>
        <item name="fontFamily">@font/light</item>
    </style>

    <!--bottomsheetdialog custom-->
    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/shape_profile_share_dialog</item>
    </style>

    <!-- hashtag chip custom -->
    <style name="hashtagStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@drawable/hashtag_chip_background_color</item>
        <item name="android:textColor">@drawable/hashtag_chip_text_color</item>
    </style>

    <!-- tab text size   -->
    <style name="tab_text" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">11sp</item>
    </style>
</resources>